<div class="relative min-h-[90vh] md:h-[95vh] w-full overflow-hidden bg-chikara-dark flex items-center py-20 md:py-0">
  
  <!-- Background Image - Using standard img for now, will optimize later if needed -->
  <div 
    class="absolute inset-0 bg-cover bg-center bg-no-repeat opacity-60 grayscale contrast-125 bg-[url('/imagenes/chikaranutritionponferrada.webp')]"
  ></div>

  <!-- Clean Gradient -->
  <div class="absolute inset-0 bg-gradient-to-r from-black/99 via-black/60 to-transparent"></div>
  
  <!-- Texture -->
  <div class="absolute inset-0 opacity-10 bg-[url('https://www.transparenttextures.com/patterns/rice-paper.png')] mix-blend-overlay"></div>

  <!-- Giant Kanji Background - Means "Strength" -->
  <div class="absolute bottom-[-5%] right-[2%] md:bottom-0 md:right-[5%] text-[25vh] md:text-[70vh] font-jp font-black text-white opacity-5 pointer-events-none select-none leading-none z-0">
    力
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full mt-12 md:mt-0">
    <div class="max-w-4xl space-y-6 md:space-y-8">
        
        <!-- Japanese Vertical Text -->
        <div class="absolute left-4 md:-left-12 top-0 h-64 hidden xl:flex flex-col items-center justify-between py-4 border-l border-white/20 pl-4">
             <span class="text-vertical font-jp font-bold text-white/60 tracking-[1em] text-xs uppercase">Disciplina</span>
             <span class="text-vertical font-jp font-bold text-white/60 tracking-[1em] text-xs uppercase">Honor</span>
             <span class="text-vertical font-jp font-bold text-white/60 tracking-[1em] text-xs uppercase">Fuerza</span>
        </div>

        <div class="flex items-center gap-4 mb-2 md:mb-4">
            <div class="h-[2px] w-8 bg-chikara-red"></div>
            <span class="text-white font-display tracking-[0.3em] text-xs md:text-base uppercase font-bold">
                Suplementación Deportiva Ponferrada
            </span>
        </div>
        
        <h1 class="text-6xl md:text-8xl font-display font-bold text-white leading-[0.9] tracking-tighter">
            CHIKARA <br />
            <span class="text-chikara-red">
                ES FUERZA
            </span>
        </h1>
        
        <p class="text-gray-200 text-base md:text-2xl font-sans font-light max-w-2xl leading-relaxed border-l-4 border-chikara-red pl-6 bg-black/40 backdrop-blur-sm py-4 pr-4">
            El camino del guerrero comienza en el interior. <br/> Equipamiento puro para aquellos que no aceptan excusas.
        </p>
        
        <div class="hidden md:flex pt-6 md:pt-10 flex-col sm:flex-row gap-4 md:gap-6">
            <a href="/#arsenal" class="group relative px-8 py-4 md:px-10 md:py-5 bg-white text-chikara-ink font-display font-bold text-lg md:text-xl tracking-widest overflow-hidden transition-all duration-300 hover:bg-chikara-red hover:text-white skew-x-[-10deg] inline-block text-center shadow-lg">
                <span class="relative z-10 inline-block skew-x-[10deg]">VER ARSENAL</span>
            </a>
            
            <a href="#filosofia" class="group px-8 py-4 md:px-10 md:py-5 border border-white text-white font-display font-bold text-lg md:text-xl tracking-widest hover:bg-white/10 transition-all duration-300 skew-x-[-10deg] inline-block text-center backdrop-blur-sm">
                <span class="inline-block skew-x-[10deg]">EL CÓDIGO</span>
            </a>
        </div>
    </div>
  </div>
</div>
